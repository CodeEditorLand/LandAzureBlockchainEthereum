		"tslint-microsoft-contrib": "^6.2.0",
		"typescript": "^3.3.1",
		"typescript-esbuild": "0.4.5",
		"vscode-extension-tester": "^2.6.0"
	},
	"publishConfig": {
		"access": "public"
	}
